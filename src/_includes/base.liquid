<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title>{{ title }}</title>
  </head>
  <body>
    <header>
      <a href="/">Ryan Martin</a>
      <nav>
        {%- for link in site.header -%}
          {% if page.url == link.slug %}
            <p style="text-decoration: underline">{{ link.text }}</p>
          {% else %}
            <a href="{{ link.slug }}">{{ link.text }}</a>
          {% endif %}
        {%- endfor -%}
      </nav>
    </header>
    <main>
      {{ content }}
    </main>
    <footer>
      <div>
        <a href="https://github.com/rmrt1n">GitHub</a>
        <a href="https://linkedin.com/in/ryanmrt1n">LinkedIn</a>
        <a href="https://twitter.com/gud_mornign">Twitter</a>
        {% comment %} <a href="/resume.pdf">Resume</a> {% endcomment %}
        <a href="mailto:hi@ryanmartin.me">hi@ryanmartin.me</a>
      </div>
      <small>CC BY-NC 4.0 2024 &copy; Ryan Martin</small>
    </footer>
  </body>
</html>

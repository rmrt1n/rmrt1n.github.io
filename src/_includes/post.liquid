---
layout: base.liquid
---

<article>
  <header>
    <h1>{{ title }}</h1>
    <p> <!-- wrap with p just to make the line height consistent -->
      <time>{{ published | date: "%d %B %Y" }}</time>
    </p>
    <ul class="tags">
      {%- for tag in tags offset:1 -%}
        <li><a href="/tags/{{ tag }}">#{{ tag }}</a></li>
      {%- endfor -%}
    </ul>
  </header>
  <section id="content">
    {{ content }}
  </section>
  {% if tags contains "articles" %}
    <a id="back-to-top" href="#top">Back to top â¤´</a>
  {% endif %}
</article>

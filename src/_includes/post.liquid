---
layout: base.liquid
---

<article>
  <h1>{{ title }}</h1>
  <time>{{ published | date: "%d %B %Y" }}</time>
  {{ content }}
  <section>
    <h4>Tags:</h4>
    <ul class="tags">
      {%- for tag in tags offset:1 -%}
        <li><a href="/tags/{{ tag }}">#{{ tag }}</a></li>
      {%- endfor -%}
    </ul>
  </section>
</article>
